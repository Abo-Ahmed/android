<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/img"
    tools:context="com.example.dalelzakah.MainActivity" >


    <EditText
        android:id="@+id/searchEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="41dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="@string/enterName"
        android:text="@string/vacant" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/searchBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/addGiven"
        android:layout_alignTop="@+id/searchEdit"
        android:text="@string/search" />

    <Button
        android:id="@+id/showPoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/searchEdit"
        android:layout_centerVertical="true"
        android:layout_marginLeft="21dp"
        android:text="@string/showNames" />

    <Button
        android:id="@+id/addPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/addGiven"
        android:layout_centerVertical="true"
        android:text="@string/addName" />

    <Button
        android:id="@+id/showGiven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/showPoor"
        android:layout_alignTop="@+id/addGiven"
        android:text="@string/showGiven" />

    <Button
        android:id="@+id/addGiven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addPeople"
        android:layout_marginRight="56dp"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@+id/showPoor"
        android:text="@string/addGiven" />

</RelativeLayout>