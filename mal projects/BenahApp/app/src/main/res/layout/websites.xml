<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backColor2"
    tools:context=".website.websiteActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/important_websites"
        android:layout_marginTop="@dimen/small_margin"
        android:id="@+id/textView5"
        android:textSize="@dimen/text_big"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewmain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="@dimen/small_margin"
        >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@color/backColor"
            tools:context=".Major.studentservicefragment"
            android:layout_marginBottom="100dp"
            android:focusable="true"
            android:focusableInTouchMode="true">


            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/small_margin"
                android:textSize="@dimen/text_mid"
                android:id="@+id/button_"
                android:background="@color/backColor2"
                />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/small_margin"
                android:id="@+id/button2_"
                android:textSize="@dimen/text_mid"
                android:layout_below="@+id/button_"
                android:background="@color/backColor"
                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/small_margin"
                android:id="@+id/button3_"
                android:textSize="@dimen/text_mid"
                android:layout_below="@+id/button2_"
                android:background="@color/backColor2"
                />


            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/small_margin"
                android:textSize="@dimen/text_mid"
                android:id="@+id/button4_"
                android:layout_below="@+id/button3_"
                android:background="@color/backColor"
                />


            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/small_margin"
                android:textSize="@dimen/text_mid"
                android:id="@+id/button6_"
                android:layout_below="@+id/button4_"
                android:background="@color/backColor2"
                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/small_margin"
                android:id="@+id/button7_"
                android:textSize="@dimen/text_mid"
                android:layout_below="@+id/button6_"
                android:background="@color/backColor"

                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/small_margin"
                android:id="@+id/button8_"
                android:textSize="@dimen/text_mid"
                android:layout_below="@+id/button7_"
                android:background="@color/backColor2"

                />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
